{
  "compilerOptions": {
    "target": "ES5",
    "module": "es2015",
    "jsx": "react",
    "lib": ["es2020", "DOM"],
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/assets/js/*"]
    },
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/assets/js/**/*"],
  "exclude": ["node_modules"]
}
